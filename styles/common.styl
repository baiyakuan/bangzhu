.d_search{
  border: 1rpx solid  #ccc;
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  border-radius: 50px;
  font-size: 24rpx;
  color: #666666;	
}
.br8{
  border-radius: 8px;
}
.br50{
  border-radius:50px;
}
.bs{
  box-sizing: border-box;	
}
.bsd{
  box-shadow: 0 10rpx 12rpx 0 rgba(0,0,0,.1);
}
.linear{
  background:linear-gradient(to right, #f87c73, #f44a3e);
}
.d_search_bat{
  border: 1rpx solid  #ccc;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  margin: 24rpx;
  border-radius: 50px;
  font-size: 30rpx;
  color: #666666;	
}
.gradualchange{
  height: 20rpx;
  background:linear-gradient(to bottom , #f0f0f0, #fff);	
}
.bar{
  width: 750rpx;
  height: 16rpx;
  background: #f6f8fb;	
}
.text-ellipsis {
	overflow: hidden;
	word-break: keep-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	max-width: 100%;
}